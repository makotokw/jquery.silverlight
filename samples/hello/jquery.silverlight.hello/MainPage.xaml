<UserControl x:Class="jquery.silverlight.hello.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="480" Background="White">
  <Grid x:Name="LayoutRoot" VerticalAlignment="Center" HorizontalAlignment="Center">
      <TextBlock Grid.Row="0" Text="Hello, Silverlight by jQuery" FontSize="26.667" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Verdana">
      	<TextBlock.Foreground>
      		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
      			<GradientStop Color="Black" Offset="0"/>
      			<GradientStop Color="#FF0769A3" Offset="1"/>
      		</LinearGradientBrush>
      	</TextBlock.Foreground>
          <TextBlock.Effect>
              <DropShadowEffect BlurRadius="15"/>
          </TextBlock.Effect>
      </TextBlock>
  </Grid>
</UserControl>
