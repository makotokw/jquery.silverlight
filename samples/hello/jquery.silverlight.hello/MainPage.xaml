<UserControl x:Class="jquery.silverlight.hello.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="480">
  <Grid x:Name="LayoutRoot" VerticalAlignment="Center" HorizontalAlignment="Center">
      <TextBlock Grid.Row="0" Text="Hello, Silverlight by jQuery" FontSize="20" Foreground="Black">
          <TextBlock.Effect>
              <DropShadowEffect BlurRadius="15" Color="SlateBlue"></DropShadowEffect>
          </TextBlock.Effect>
      </TextBlock>
  </Grid>
</UserControl>
